<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <title>Create New Poll</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-6 pffest-md-3 my-5">
          <div class="card card-body">
            <h5>Create a new Poll</h5>
            <form action="/create" method="POST">
              <div class="form-group">
                <label for="title">Enter Title</label>
                <input
                  type="text"
                  name="title"
                  id="title"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="description">Enter Description</label>
                <textarea
                  type="text"
                  name="description"
                  id="description"
                  class="form-control"
                ></textarea>
              </div>
              <div id="options">
                <p>Enter Your Options</p>
                <div class="form-group mb-2">
                  <input
                    type="text"
                    name="option"
                    class="form-control"
                    placeholder="Option 1"
                  />
                </div>
                <div class="form-group mb-2">
                  <input
                    type="text"
                    name="option"
                    class="form-control"
                    placeholder="Option 2"
                  />
                </div>
              </div>
              <button id="add-option" class="btn btn-secondary btn-sm my-3">
                Add New Option
              </button>
              <br />
              <input type="submit" class="btn btn-primary" value="Create" />
            </form>
          </div>
        </div>
      </div>
    </div>
    <script>
      let options = document.getElementById("options");
      let addOption = document.getElementById("add-option");

      let currentOptionNumber = 3;
      addOption.addEventListener("click", (e) => {
        e.preventDefault();
        console.log("click")
        let option = createNewOption();
        options.appendChild(option);
      });
      const createNewOption = () => {
        let div = document.createElement("div");
        // div.className("from-group");
        div.classList = "from-group mb-2";
        let input = document.createElement("input");
        input.type = "text";
        input.className = "form-control";
        input.name = "option"
        input.placeholder = "option " + currentOptionNumber++;
        div.appendChild(input);
        return div;
      };
    </script>
  </body>
</html>
