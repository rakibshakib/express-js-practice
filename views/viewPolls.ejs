<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container mx-auto">
      <div class="row">
        <div class="col-md-5 offse-md-3 my-5">
          <div class="card card-body">
            <h4 class="text-primary">Title: <%= poll.title %></h4>
            <p>Description: <%= poll.description %></p>
            <div class="my-3">
                <h5>Result:</h5>
                <ul class="list-group">
                    <% for(let r of result) { %>
                        <li class="list-group-item">
                            <p>
                                <%= r.name %>: &nbsp; <b class="text-primary"><%= r.parcentage %>%</b> 
                            </p>
                        </li>
                   <% } %>

                </ul>
            </div>
            <div class="my-4">
              <h5>What is Your Opnion?</h5>
              <form action="/polls/<%= poll._id %>" method="POST">
                <% for(let opt of poll.option) { %>
                <div class="custom-control custom-radio mb-2">
                  <input
                    type="radio"
                    name="option"
                    id="<%= opt._id %>"
                    class="custom-control-input "
                    value="<%= opt._id %>"
                  />
                  <label for="<%= opt._id %>" class="custom-control-label text-primary">
                    <%= opt.name %>
                  </label>
                </div>
                <% } %>
                <input
                  type="submit"
                  value="Submit"
                  class="btn btn-secondary btn-sm "
                />
                <!-- <a href="/polls">
                    <button class="btn btn-warning btn-sm ">Back</button>
                </a> -->
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
